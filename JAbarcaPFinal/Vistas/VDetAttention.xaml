<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JAbarcaPFinal.Vistas.VDetAttention"
             Title="Det. Asistencias">
    <VerticalStackLayout Padding="20" Spacing="25">
        <Label 
            Text="Det. Asistencias"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView x:Name="lstRegistros">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblLatitud" Text="{Binding latitud}"/>
                            <Label x:Name="lblLongitud" Text="{Binding longitud}"/>
                            <Label x:Name="lblTipo" Text="{Binding nombreCat}"/>

                        </StackLayout>

                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>
</ContentPage>
